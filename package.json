{
  "name": "create-bent-stack",
  "version": "0.1.0",
  "description": "Scaffold a full-stack BENT monorepo — Bun, Elysia, Next.js, Turbo — with Prisma + Better Auth + Eden Treaty",
  "type": "module",
  "bin": {
    "create-bent-stack": "dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "prepublishOnly": "bun run build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "@clack/prompts": "^0.10.0",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "keywords": [
    "create",
    "scaffold",
    "bun",
    "elysia",
    "nextjs",
    "turbo",
    "monorepo",
    "typescript",
    "fullstack",
    "prisma",
    "better-auth",
    "eden-treaty",
    "tailwindcss",
    "shadcn-ui"
  ]
}
