{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "incremental": true,
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "types": ["bun-types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}
