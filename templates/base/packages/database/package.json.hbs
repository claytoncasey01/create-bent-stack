{
  "name": "{{PACKAGE_SCOPE}}/database",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./generated/prisma/client.ts",
      "import": "./generated/prisma/client.ts",
      "default": "./generated/prisma/client.ts"
    }
  },
  "scripts": {
    "db:generate": "bun --env-file=.env prisma generate",
    "db:migrate": "bun --env-file=.env prisma migrate dev",
    "db:push": "bun --env-file=.env prisma db push",
    "db:studio": "bun --env-file=.env prisma studio",
    "db:seed": "bun run prisma/seed.ts",
    "lint": "eslint --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "prisma": {
    "seed": "bun run prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.3.0"
  },
  "devDependencies": {
    "{{PACKAGE_SCOPE}}/eslint-config": "workspace:*",
    "{{PACKAGE_SCOPE}}/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "eslint": "^9.39.1",
    "prisma": "^7.3.0",
    "typescript": "^5.9.2"
  }
}
